    <style>
        html {
  position: relative;
  min-height: 100%;
}
a{
    text-decoration: none;
}
body {
  background-color: #fff;
  color: #fff;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.wrapper {
  display: grid;
  height: 100%;
  grid-template-columns: 1fr 3fr 1fr;
  grid-auto-rows: minmax(250px, auto);
}

.logo {
  background-image: url(img/SIES-GST1.png);
  background-repeat: no-repeat;
  background-position: center;
  background-size: 300px auto;
  grid-row: 1/2;
  grid-column: 2;
}

.db-search {
    margin-top:-150px;
  padding-top: 30px;
  grid-row: 3;
  grid-column: 2;
}

#search-box {
  padding: 15px;
  padding-left: 45px;
  width: 100%;
  font-size: 20px;
  color: #333;
  border: 1px solid #c1efff;
}

.icon {
  grid-row: 1;
  grid-column: 2;
  justify-self: left;
  padding-top: 50px;
  padding-left: 15px;
}

#search-icon {
  font-size: 20px;
  color: #333;
}

.search-buttons {
  grid-row: 2;
  grid-column: 2;
  margin-top: 50px;
  justify-self: center;
  color: #777;
  font-size: 20px;
}

a {
  width: 200px;
  height: 45px;
  border: 0;
  padding: 15px;
  color: #fff;
  background-color: #068481;
}



.entry {
  /*position: relative;*/
  padding: 0px 15px 15px 15px;
  background-color: #068481;
  border-bottom: 5px solid #033635;
}

.entry:hover {
  transform: scale(0.98);
}

#random-button > a {
  color: #fff;
}

#read {
  position: relative;
  bottom: 0;
  padding-bottom: 15px;
  color: #c1efff;
  font-size: 18px;
}

#random-button > a:hover, #read:hover {
  text-decoration: none;
  color: #fff;
}
  

@media only screen and (max-width: 926px) {
  .articles {
    grid-template-columns: repeat(2, 1fr);
  }
  
}

@media only screen and (max-width: 767px) { 
  .wrapper {
    grid-auto-rows: minmax(150px, auto);
  }
  
  .logo {
    background-size: 100px auto;
  }
  
  .db-search {
    grid-column: 1/4;
    margin-top: -20px;
    padding-left: 10px;
    padding-right: 10px;
  }
  
  .icon {
    grid-column: 1/4;
    padding-top: 30px;
    padding-left: 25px;
  }
  
  .articles {
    grid-template-columns: 1fr;
    grid-auto-rows: minmax(180px, auto);
    margin: 0px 10px 100px 10px;
  }
  
  .search-buttons {
    grid-column: 1/4;
    margin-top: 80px;
  }
  
  button {
    width: 150px;
  }

}
